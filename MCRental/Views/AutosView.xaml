<Page x:Class="MCRental_Client.Views.AutosView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCRental_Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutosView">

    <Grid>
        <ListView ItemsSource="{Binding Steden}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Merk" DisplayMemberBinding="{Binding Merk}" Width="100"/>
                    <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="200"/>
                    <GridViewColumn Header="Nummerplaat" DisplayMemberBinding="{Binding Nummerplaat}" Width="200"/>
                    <GridViewColumn Header="DagPrijs" DisplayMemberBinding="{Binding DagPrijs}" Width="200"/>
                    <GridViewColumn Header="Beschikbaar" DisplayMemberBinding="{Binding Beschikbaar}" Width="200"/>
                    <GridViewColumn Header="type" DisplayMemberBinding="{Binding type}" Width="200"/>
                    <GridViewColumn Header="FiliaalId" DisplayMemberBinding="{Binding FiliaalId}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
