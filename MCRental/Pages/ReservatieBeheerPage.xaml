<Page x:Class="MCRental_Client.Pages.ReservatieBeheerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCRental_Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReservatieBeheerPage">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Reservaties"
           FontSize="20"
           FontWeight="Bold"
           VerticalAlignment="Center"
           Grid.Column="0"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ComboBox x:Name="cmbSort" Width="180" VerticalAlignment="Center" SelectionChanged="cmbSort_SelectionChanged">
                        <ComboBoxItem Content="Nieuwste" />
                        <ComboBoxItem Content="Oudste" />
                    </ComboBox>
                </StackPanel>
            </Grid>
            <DataGrid x:Name="dgReservaties" Grid.Row="1" Margin="8" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ReservatieId" Binding="{Binding Id}" Width="100"/>
                    <DataGridTextColumn Header="StartDatum" Binding="{Binding StartDatum}" Width="150"/>
                    <DataGridTextColumn Header="EindDatum" Binding="{Binding EindDatum}" Width="150"/>
                    <DataGridTemplateColumn Header="Klant">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Gebruiker.Achternaam}"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding Gebruiker.Voornaam}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="btnKoppel_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Auto.Merk}"/>
                                        <TextBlock Text=" "/>
                                        <TextBlock Text="{Binding Auto.Model}"/>
                                        <TextBlock Text=" "/>
                                        <TextBlock Text="{Binding Auto.Nummerplaat}"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
