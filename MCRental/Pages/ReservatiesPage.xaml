<Page x:Class="MCRental_Client.Pages.ReservatiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCRental_Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReservatiesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Reservaties"
               FontSize="20"
               FontWeight="Bold"
               VerticalAlignment="Center"
               Grid.Column="0"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <ComboBox x:Name="cmbSort" Width="180" VerticalAlignment="Center">
                    <ComboBoxItem Content="Nieuwste" />
                    <ComboBoxItem Content="Oudste" />
                </ComboBox>
            </StackPanel>
        </Grid>
        <DataGrid x:Name="dgReservaties" Grid.Row="1" Margin="8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ReservatieId" Binding="{Binding Id}" Width="100"/>
                    <DataGridTextColumn Header="AutoId" Binding="{Binding AutoId}" Width="100"/>
                    <DataGridTextColumn Header="StartDatum" Binding="{Binding StartDatum}" Width="150"/>
                    <DataGridTextColumn Header="EindDatum" Binding="{Binding EindDatum}" Width="150"/>
                    <DataGridTemplateColumn Header="Acties" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Details" Click="DetailsButton_Click" Width="80" Height="25" Margin="0,0,5,0"/>
                        </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        
    </Grid>
</Page>
