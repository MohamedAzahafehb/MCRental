<Page x:Class="MCRental_Client.Pages.AutoOverzichtPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCRental_Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoOverzichtPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: titel links, comboboxen gecentreerd -->
        <Grid Grid.Row="0" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnVerhuurGegevens" Background="Transparent" >
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Verhuurgegevens" 
                       FontSize="24" 
                       FontWeight="Bold"/>
                    <Label x:Name="lblFiliaal" FontSize="24" FontWeight="Bold"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="lblStartdt" Margin="8,0,0,0" Grid.Column="0"/>
                        <Label x:Name="lblEinddt" Margin="8,0,0,0" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </Button>


            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                
                
                <!--
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label x:Name="lblStartdt" Content="Startdatum" Margin="8,0,0,0" Grid.Column="0" Grid.Row="0"/>
                    <DatePicker x:Name="dpStartDatum" Width="150" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0"/>
                    <Label x:Name="lblEinddt" Content="Einddatum" Margin="8,0,0,0" Grid.Column="0" Grid.Row="1"/>
                    <DatePicker x:Name="dpEindDatum" Width="150" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
                </Grid>

                <StackPanel Orientation="Vertical">
                    <Label x:Name="lblFiliaal" Content="filiaal"></Label>
                    <ComboBox x:Name="cmbFilialen" Width="100" VerticalAlignment="Center" DisplayMemberPath="Naam" />

                </StackPanel>
                
                -->

                <StackPanel Orientation="Vertical">
                    <Label Content="Sorteren op" Margin="8,0,0,0"/>
                    <ComboBox x:Name="cmbSort" Width="180" VerticalAlignment="Center" SelectionChanged="cmbSort_SelectionChanged">
                        <ComboBoxItem Content="Prijs oplopend" />
                        <ComboBoxItem Content="Prijs aflopend" />
                        <ComboBoxItem Content="Merk A-Z" />
                        <ComboBoxItem Content="Merk Z-A" />
                    </ComboBox>
                </StackPanel>

                <!-- Multi-select style: ComboBox with CheckBoxes in item template (checked state is independent) -->
                <StackPanel Orientation="Vertical">
                    <Label Content="Type auto" Margin="8,0,0,0"/>
                    <ComboBox x:Name="cmbTypes" Width="250" StaysOpenOnEdit="True" IsEditable="False" VerticalAlignment="Center" >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding}" Tag="{Binding}" 
                                    Checked="TypeCheckBox_Changed" Unchecked="TypeCheckBox_Changed"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Grid>

        <DataGrid x:Name="dgAutos" Grid.Row="1" Margin="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Merk" Binding="{Binding Merk}" Width="100"/>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="200"/>
                <DataGridTextColumn Header="Nummerplaat" Binding="{Binding Nummerplaat}" Width="200"/>
                <DataGridTextColumn Header="DagPrijs" Binding="{Binding DagPrijs}" Width="200"/>
                <DataGridTextColumn Header="Beschikbaar" Binding="{Binding Beschikbaar}" Width="200"/>
                <DataGridTextColumn Header="Type" Binding="{Binding type}" Width="200"/>
                <DataGridTextColumn Header="FiliaalId" Binding="{Binding FiliaalId}" Width="200"/>
                <DataGridTemplateColumn Header="Acties" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Reserveer" Click="ReserveerButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock
           x:Name="txtGeenAutos"
           FontSize="24" 
           FontWeight="Bold"
           Grid.Row="1" 
           Margin="10,50"/>    
    </Grid>
</Page>
