<Page x:Class="MCRental_Client.Pages.HomeKlantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCRental_Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeKlantPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="MC Rental" 
               FontSize="24" 
               FontWeight="Bold" 
               Grid.Row="0" 
               Margin="10"/>

            <StackPanel Orientation="Vertical" Margin="5" Grid.Column="1">
                <ComboBox x:Name="cmbFilialen" Width="250" StaysOpenOnEdit="True" IsEditable="False" VerticalAlignment="Center" DisplayMemberPath="Naam"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="0,5,0,0" Width="200">
                        <Label Content="Startdatum" FontWeight="Bold"/>
                        <DatePicker x:Name="dpStartDatum"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,5,0,0" Width="200">
                        <Label Content="Einddatum" FontWeight="Bold"/>
                        <DatePicker x:Name="dpEindDatum"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Button Grid.Column="2" x:Name="btnZoek" Content="Zoek auto's" Width="100" Height="30" Margin="0,10,0,0" HorizontalAlignment="Center" Click="btnZoek_Click"/>
        </Grid>

        <TextBlock Text="Welkom bij MC Rental" 
           FontSize="24" 
           FontWeight="Bold" 
           Grid.Row="1" 
           Margin="10"/>

    </Grid>
</Page>
