<Window x:Class="MCRental_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCRental_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Zijbalk met knoppen -->
            <ColumnDefinition Width="*"/>
            <!-- Hoofdinhoud -->
        </Grid.ColumnDefinitions>

        <!-- Linkerkant: navigatieknoppen -->
        <StackPanel Background="#EEE">
            <TextBlock Text="MCRentalCars" FontWeight="Bold" FontSize="18" Margin="0 0 0 20"/>
            <Button Content="Auto's" Click="Autos_Click" Margin="0 5"/>
            <Button Content="Filialen" Click="Filialen_Click" Margin="0 5"/>
            <Button Content="Steden" Click="Steden_Click" Margin="0 5"/>
            <Button Content="Klanten" Click="Klanten_Click" Margin="0 5"/>
            <Button Content="Reservaties" Click="Reservaties_Click" Margin="0 5"/>
        </StackPanel>

        <!-- Rechterkant: Frame voor dynamische content -->
        <!--
        <DataGrid x:Name="dgSteden" Height="400" Width="1110" VerticalAlignment="Top" HorizontalAlignment="Left" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Wanneer" Binding="{Binding Id}" Width="20"/>
                <DataGridTextColumn Header="Wanneer" Binding="{Binding Naam}" Width="150"/>
                <DataGridTextColumn Header="Wanneer" Binding="{Binding Postcode}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
        -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
