<Window x:Class="MCRental_Client.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCRental_Client.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Menu x:Name="mnLinker">
                <MenuItem x:Name="mniAuto" Header="Auto's" Click="mniAuto_Click"></MenuItem>
                <MenuItem x:Name="mniReservaties" Header="Reservaties" Click="mniReservaties_Click"></MenuItem>
                <MenuItem x:Name="mniAutobeheer" Header="Autobeheer" Click="mniAutobeheer_Click"></MenuItem>
                <MenuItem x:Name="mniReservatiebeheer" Header="Reservatiebeheer" Click="mniReservatiebeheer_Click"></MenuItem>
                <MenuItem x:Name="mniGebruikers" Header="Gebruikers" Click="mniGebruikers_Click"></MenuItem>
                <MenuItem x:Name="mniFilialenbeheer" Header="Filialenbeheer" Click="mniFilialenbeheer_Click"></MenuItem>
                <MenuItem x:Name="mniProfiel" Header="Profiel" Click="mniProfiel_Click"></MenuItem>
            </Menu>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label x:Name="lblGebruiker" Content="Ingelogd als: Gast" HorizontalAlignment="Right" Margin="10"/>
            <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Right" Margin="10" Click="btnLogin_Click"/>
            <Button x:Name="btnRegistreer" Content="Registreer" HorizontalAlignment="Right" Margin="10" Click="btnRegistreer_Click"/>
        </StackPanel>

        <Frame x:Name="frmMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>

</Window>
