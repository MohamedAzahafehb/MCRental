<Window x:Class="MCRental_Client.Windows.ReservatieDetailsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCRental_Client.Windows"
        mc:Ignorable="d"
        Title="ReservatieDetailsWin" Height="665" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reservatie Details"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">

            <GroupBox Header="Reservatie">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Startdatum:" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblStartdatum" Grid.Column="1" Margin="3"/>

                    <TextBlock Text="Einddatum:" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblEinddatum" Grid.Column="3" Margin="3"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Auto">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Merk:" Grid.Row="0" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblMerk" Grid.Row="0" Grid.Column="1" Margin="3"/>

                    <TextBlock Text="Model:" Grid.Row="0" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblModel" Grid.Row="0" Grid.Column="3" Margin="3"/>

                    <TextBlock Text="Nummerplaat:" Grid.Row="1" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblNummerplaat" Grid.Row="1" Grid.Column="1" Margin="3"/>

                    <TextBlock Text="Type:" Grid.Row="1" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblType" Grid.Row="1" Grid.Column="3" Margin="3"/>

                    <TextBlock Text="Dagprijs:" Grid.Row="2" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblDagprijs" Grid.Row="2" Grid.Column="1" Margin="3"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Filiaal">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Naam:" Grid.Row="0" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblFiliaalNaam" Grid.Row="0" Grid.Column="1" Margin="3"/>

                    <TextBlock Text="Telefoon:" Grid.Row="0" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblTelefoon" Grid.Row="0" Grid.Column="3" Margin="3"/>

                    <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblEmail" Grid.Row="1" Grid.Column="1" Margin="3"/>

                    <TextBlock Text="Adres:" Grid.Row="2" Grid.Column="0" Margin="3" VerticalAlignment="Top"/>
                    <Label x:Name="lblAdres" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="3"/>

                    <TextBlock Text="Stad:" Grid.Row="3" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblStad" Grid.Row="3" Grid.Column="1" Margin="3"/>

                    <TextBlock Text="Postcode:" Grid.Row="3" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblPostcode" Grid.Row="3" Grid.Column="3" Margin="3"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Klant">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Naam:" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblKlantNaam" Grid.Column="1" Margin="3"/>

                    <TextBlock Text="Email:" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblKlantEmail" Grid.Column="3" Margin="3"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Sluiten" Width="120" Height="35"/>
            <Button Content="Opslaan" Width="120" Height="35"/>
            <Button Content="Reservatie Annuleren" Width="150" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
