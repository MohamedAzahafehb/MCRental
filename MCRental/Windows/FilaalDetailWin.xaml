<Window x:Class="MCRental_Client.Windows.FilaalDetailWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCRental_Client.Windows"
        mc:Ignorable="d"
        Title="FilaalDetailWin" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock x:Name="lblTitel"
               FontSize="22"
               FontWeight="Bold"
               Margin="0,0,0,15"/>
            <Button x:Name="btnBewerk" Content="Bewerk" Width="100" HorizontalAlignment="Right" Margin="10" Click="btnBewerk_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Naam:" Grid.Row="0" Grid.Column="0" Margin="3"/>
                <TextBox x:Name="txtNaam" Grid.Row="0" Grid.Column="1" Margin="3" Grid.ColumnSpan="2" />
                <Label Content="Telefoon:" Grid.Row="1" Grid.Column="0" Margin="3"/>
                <TextBox x:Name="txtTelefoon" Grid.Row="1" Grid.Column="1" Margin="3" />
                <Label Content="Email:" Grid.Row="1" Grid.Column="2" Margin="3"/> 
                <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="3" Margin="3" />
                <Label Content="Adres:" Grid.Row="2" Grid.Column="0" Margin="3"/>
                <TextBox x:Name="txtAdres" Grid.Row="2" Grid.Column="1" Margin="3" Grid.ColumnSpan="3"/>
                <Label Content="Plaats:" Grid.Row="3" Grid.Column="0" Margin="3"/>
                <ComboBox x:Name="cmbPlaats" Grid.Row="3" Grid.Column="1" Margin="3" SelectedValuePath="Id">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Postcode}" />
                                <TextBlock Text=" " />
                                <TextBlock Text="{Binding Naam}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnOpslaan" Content="Opslaan" Width="100" Margin="5" Click="btnOpslaan_Click"/>
            <Button x:Name="btnAnnuleren" Content="Annuleren" Width="100" Margin="5" Click="btnAnnuleren_Click"/>
        </StackPanel>
    </Grid>
</Window>
