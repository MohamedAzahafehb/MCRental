<Window x:Class="MCRental_Client.Windows.VoegAutoToe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCRental_Client.Windows"
        mc:Ignorable="d"
        Title="VoegAutoToe" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="Auto Toevoegen"
           FontSize="22"
           FontWeight="Bold"
           Margin="0,0,0,15"/>

            <Button x:Name="btnBewerk" Content="Bewerk" Width="100" HorizontalAlignment="Right" Margin="10" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Merk:" Grid.Row="0" Grid.Column="0" Margin="3"/>
                <TextBox x:Name="txtMerk" Grid.Row="0" Grid.Column="1" Margin="3"/>
                <Label Content="Model:" Grid.Row="0" Grid.Column="2" Margin="3"/>
                <TextBox x:Name="txtModel" Grid.Row="0" Grid.Column="3" Margin="3"/>
                <Label Content="Nummerplaat:" Grid.Row="1" Grid.Column="0" Margin="3"/>
                <TextBox x:Name="txtNummerplaat" Grid.Row="1" Grid.Column="1" Margin="3"/>
                <Label Content="Dagprijs:" Grid.Row="1" Grid.Column="2" Margin="3"/>
                <TextBox x:Name="txtDagprijs" Grid.Row="1" Grid.Column="3" Margin="3"/>
                <Label Content="Type:" Grid.Row="2" Grid.Column="0" Margin="3"/>
                <TextBox x:Name="txtType" Grid.Row="2" Grid.Column="1" Margin="3"/>
                <Label Content="Filiaal:" Grid.Row="2" Grid.Column="2" Margin="3"/>
                <ComboBox x:Name="cmbFiliaal" Grid.Row="2" Grid.Column="3" Margin="3" DisplayMemberPath="Naam" SelectedValuePath="Id" />
                <Label Content="status:" Grid.Row="3" Grid.Column="0" Margin="3"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="3">
                    <RadioButton x:Name="rbnBeschikbaar" Content="Beschikbaar" Grid.Row="3" Grid.Column="1" Margin="3"/>
                    <RadioButton x:Name="rbnNietBeschikbaar" Content="Niet Beschikbaar" IsChecked="True" Grid.Row="3" Grid.Column="1" Margin="3"/>
                </StackPanel>

            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="btnOpslaan" Content="Opslaan" Width="100" Margin="5" Click="btnOpslaan_Click"/>
            <Button x:Name="btnAnnuleren" Content="Annuleren" Width="100" Margin="5" Click="btnAnnuleren_Click"/>
        </StackPanel>
    </Grid>
</Window>
