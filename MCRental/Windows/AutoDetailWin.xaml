<Window x:Class="MCRental_Client.Windows.AutoDetailWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCRental_Client.Windows"
        mc:Ignorable="d"
        Title="AutoDetailWin" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reservatie Details"
           FontSize="22"
           FontWeight="Bold"
           Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
            <GroupBox Header="Auto">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Merk:" Grid.Row="0" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblMerk" Grid.Row="0" Grid.Column="1" Margin="3"/>
                    <TextBlock Text="Model:" Grid.Row="0" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblModel" Grid.Row="0" Grid.Column="3" Margin="3"/>
                    <TextBlock Text="Nummerplaat:" Grid.Row="1" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblNummerplaat" Grid.Row="1" Grid.Column="1" Margin="3"/>
                    <TextBlock Text="Dagprijs:" Grid.Row="1" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblDagprijs" Grid.Row="1" Grid.Column="3" Margin="3"/>
                    <TextBlock Text="Type:" Grid.Row="2" Grid.Column="0" Margin="3"/>
                    <Label x:Name="lblType" Grid.Row="2" Grid.Column="1" Margin="3"/>
                    <TextBlock Text="Beschikbaar:" Grid.Row="2" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblBeschikbaar" Grid.Row="2" Grid.Column="3" Margin="3"/>
                    <TextBlock Text="Filiaal:" Grid.Row="2" Grid.Column="2" Margin="3"/>
                    <Label x:Name="lblFiliaal" Grid.Row="2" Grid.Column="3" Margin="3"/>
                    
                </Grid>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button Content="Wijzigingen Opslaan" Width="150"/>
            <Button Content="Auto Deactiveren" Width="150"/>
            <Button Content="Wijzigingen Annuleren" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
