<!DOCTYPE html>

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer _localizer

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MCRentalWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nummerplaat.css" />
    <link rel="stylesheet" href="~/MCRentalWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-car-front-fill text-warning"></i> MCRental
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="mainNavbar">
                    <ul class="navbar-nav flex-grow-1">

                        @* Alleen ingelogde gebruikers *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            @* ===== KLANT ===== *@
                            @if (User.IsInRole("Klant"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Home"
                                       asp-action="Index">
                                        <i class="bi bi-house"></i> Home
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Reservaties"
                                       asp-action="Index">
                                        <i class="bi bi-calendar-check"></i> Reservaties
                                    </a>
                                </li>
                            }

                            @* ===== ADMIN ===== *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Autos"
                                       asp-action="Beheer">
                                        <i class="bi bi-car-front"></i> Auto’s
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Reservaties"
                                       asp-action="ReservatieBeheer">
                                        <i class="bi bi-calendar-week"></i> Reservaties
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Filialen"
                                       asp-action="Index">
                                        <i class="bi bi-building"></i> Filialen
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Gebruikers"
                                       asp-action="Index">
                                        <i class="bi bi-people"></i> Gebruikers
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MCRentalWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">@_localizer["Privacy"]</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @Html.RenderUnobtrusiveAjaxScript()
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
