@model MCRental_Models.Auto

@{
    ViewData["Title"] = "Auto Details";
}

<div class="container my-5">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold">
                <i class="bi bi-car-front-fill text-warning"></i>
                @Model.Merk @Model.Model
            </h1>
            <p class="text-muted">
                Detailoverzicht van deze auto
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Terug naar overzicht
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Linker kolom -->
        <div class="col-lg-5 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">

                    <!-- Belgische Nummerplaat -->
                    <div class="d-flex justify-content-center mb-3">
                        <div class="belgian-license-plate">
                            <div class="plate-content">
                                <div class="plate-left">
                                    <div class="eu-stars">
                                        @for (int i = 0; i < 12; i++)
                                        {
                                            <div class="star"></div>
                                        }
                                    </div>
                                    <div class="country-code">B</div>
                                </div>
                                <div class="plate-number">@Model.Nummerplaat</div>
                            </div>
                        </div>
                    </div>

                    <!-- Status -->
                    @if (Model.Beschikbaar)
                    {
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-check-circle"></i> Beschikbaar
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">
                            <i class="bi bi-x-circle"></i> Niet beschikbaar
                        </span>
                    }

                    <hr />

                    <h5 class="text-muted">@Model.type</h5>

                    <h3 class="text-success mt-2">
                        €@Model.DagPrijs.ToString("F2") <small class="text-muted fs-6">/ dag</small>
                    </h3>
                </div>
            </div>
        </div>

        <!-- Rechter kolom -->
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Auto informatie
                    </h5>
                </div>
                <div class="card-body">

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Merk</div>
                        <div class="col-sm-8 fw-semibold">@Model.Merk</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Model</div>
                        <div class="col-sm-8 fw-semibold">@Model.Model</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Type</div>
                        <div class="col-sm-8 fw-semibold">@Model.type</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Dagprijs</div>
                        <div class="col-sm-8 fw-semibold text-success">
                            €@Model.DagPrijs.ToString("F2")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">Status</div>
                        <div class="col-sm-8">
                            @if (Model.Beschikbaar)
                            {
                                <span class="badge bg-success">
                                    Beschikbaar
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    Niet beschikbaar
                                </span>
                            }
                        </div>
                    </div>

                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-building"></i> Filiaal
                    </h5>
                </div>
                <div class="card-body">

                    @if (Model.Filiaal != null)
                    {
                        <p class="mb-1 fw-semibold">@Model.Filiaal.Naam</p>
                        <p class="mb-1">@Model.Filiaal.Adres</p>
                        <p class="mb-0 text-muted">@Model.Filiaal.Stad?.Naam</p>
                    }
                    else
                    {
                        <span class="text-muted">Geen filiaal gekoppeld</span>
                    }

                </div>
            </div>

            <!-- Acties -->
            <div class="d-flex gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-warning flex-fill">
                    <i class="bi bi-pencil"></i> Bewerken
                </a>

                <a asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-outline-danger flex-fill"
                   onclick="return confirm('Weet je zeker dat je deze auto wilt verwijderen?')">
                    <i class="bi bi-trash"></i> Verwijderen
                </a>
            </div>
        </div>
    </div>
</div>
