@model MCRental_Models.Auto

@{
    ViewData["Title"] = "Auto Bewerken";
}

<div class="container my-5">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold">
                <i class="bi bi-pencil-square text-warning"></i>
                Auto Bewerken
            </h1>
            <p class="text-muted">
                Pas de gegevens van deze auto aan
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Terug naar overzicht
            </a>
        </div>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <!-- Linker kolom -->
            <div class="col-lg-5 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">

                        <!-- Nummerplaat preview -->
                        <div class="d-flex justify-content-center mb-3">
                            <div class="belgian-license-plate">
                                <div class="plate-content">
                                    <div class="plate-left">
                                        <div class="eu-stars">
                                            @for (int i = 0; i < 12; i++)
                                            {
                                                <div class="star"></div>
                                            }
                                        </div>
                                        <div class="country-code">B</div>
                                    </div>
                                    <div class="plate-number">@Model.Nummerplaat</div>
                                </div>
                            </div>
                        </div>

                        <!-- Beschikbaar -->
                        <div class="form-check form-switch d-flex justify-content-center mt-3">
                            <input class="form-check-input" asp-for="Beschikbaar" id="beschikbaarSwitch">
                            <label class="form-check-label ms-2" for="beschikbaarSwitch">
                                @Html.DisplayNameFor(m => m.Beschikbaar)
                            </label>
                        </div>

                        <small class="text-muted d-block mt-2">
                            Schakel de beschikbaarheid van deze auto in of uit
                        </small>

                    </div>
                </div>
            </div>

            <!-- Rechter kolom -->
            <div class="col-lg-7">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle"></i> Auto gegevens
                        </h5>
                    </div>
                    <div class="card-body">

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Merk" class="form-label"></label>
                                <input asp-for="Merk" class="form-control" />
                                <span asp-validation-for="Merk" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Model" class="form-label"></label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nummerplaat" class="form-label"></label>
                            <input asp-for="Nummerplaat" class="form-control" />
                            <span asp-validation-for="Nummerplaat" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DagPrijs" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">€</span>
                                    <input asp-for="DagPrijs" class="form-control" />
                                </div>
                                <span asp-validation-for="DagPrijs" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="type" class="form-label"></label>
                                <input asp-for="type" class="form-control" />
                                <span asp-validation-for="type" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FiliaalId" class="form-label"></label>
                            <select asp-for="FiliaalId"
                                    class="form-select"
                                    asp-items="ViewBag.FiliaalId">
                                <option value="">-- Selecteer filiaal --</option>
                            </select>
                            <span asp-validation-for="FiliaalId" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <!-- Acties -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning btn-lg flex-fill">
                        <i class="bi bi-save"></i> Wijzigingen opslaan
                    </button>

                    <a asp-action="Details" asp-route-id="@Model.Id"
                       class="btn btn-outline-secondary btn-lg flex-fill">
                        <i class="bi bi-eye"></i> Annuleren
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
