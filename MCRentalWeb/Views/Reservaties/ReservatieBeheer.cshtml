@model IEnumerable<MCRental_Models.Reservatie>

@{
    ViewData["Title"] = "Reservaties Beheer";
    var nu = DateTime.Now;
}

<div class="container-fluid my-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-clipboard-data text-warning"></i>
                Reservaties Beheer
            </h1>
            <p class="text-muted">Overzicht van alle reservaties</p>
        </div>
    </div>

    <!-- Table -->
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Klant</th>
                        <th>Auto</th>
                        <th>Periode</th>
                        <th>Status</th>
                        <th class="text-center">Acties</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.OrderByDescending(r => r.StartDatum))
                    {
                        var status =
                        r.Annulatie!=null ? "Geannuleerd" :
                        r.EindDatum < nu ? "Verlopen" :
                        r.StartDatum > nu ? "Toekomstig" :
                        "Actief";

                        var badge =
                        status == "Actief" ? "success" :
                        status == "Toekomstig" ? "primary" :
                        status == "Verlopen" ? "secondary" :
                        "danger";

                        <tr>
                            <td>@r.Id</td>
                            <td>
                                <strong>@r.Gebruiker.UserName</strong><br />
                                <small class="text-muted">@r.Gebruiker.Email</small>
                            </td>
                            <td>
                                <strong>@r.Auto.Merk @r.Auto.Model</strong><br />
                                <span class="badge bg-light text-dark border">
                                    @r.Auto.Nummerplaat
                                </span>
                            </td>
                            <td>
                                @r.StartDatum.ToString("dd/MM/yyyy HH:mm")<br />
                                <small class="text-muted">
                                    tot @r.EindDatum.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </td>
                            <td>
                                <span class="badge bg-@badge">
                                    @status
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-warning"
                                            onclick="openAutoModal(@r.Id)">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>
                                    @if (r.Annulatie!=null)
                                    {
                                        <button class="btn btn-outline-danger"
                                                onclick="annuleer(@r.Id)">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
